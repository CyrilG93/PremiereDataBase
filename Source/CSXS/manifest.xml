<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.database.premiere" ExtensionBundleVersion="1.0.0"
                   ExtensionBundleName="Data Base" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Author>
    <![CDATA[Premiere DataBase Extension]]>
  </Author>
  <Contact mailto="support@example.com"/>
  <Legal>
    <![CDATA[Media database browser for Premiere Pro projects.]]>
  </Legal>
  <Abstract href="https://github.com/CyrilG93/PremiereDataBase">
    <![CDATA[Browse and import media files from a local database folder into Premiere Pro projects.]]>
  </Abstract>
  <ExtensionList>
    <Extension Id="com.database.premiere.panel" Version="1.0.0"/>
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[23.0,99.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.database.premiere.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./host/index.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Data Base</Menu>
          <Geometry>
            <Size>
              <Height>700</Height>
              <Width>400</Width>
            </Size>
            <MinSize>
              <Height>400</Height>
              <Width>300</Width>
            </MinSize>
            <MaxSize>
              <Height>1200</Height>
              <Width>800</Width>
            </MaxSize>
          </Geometry>
          <Icons>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
